{
  "name": "emla-chat-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepare": "husky install",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --ignore-path .gitignore --write **/*.{js,jsx,ts,tsx,json,css}",
    "preview": "vite preview",
    "check-format": "prettier --ignore-path .gitignore --check **/*.{js,jsx,ts,tsx,json,css}",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "check-all": "yarn check-format && yarn lint && yarn check-types"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@react-icons/all-files": "^4.1.0",
    "emoji-strip": "^1.0.1",
    "fs": "^0.0.1-security",
    "microsoft-cognitiveservices-speech-sdk": "^1.30.1",
    "openai": "^3.3.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icon": "^1.0.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.14.2",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@types/emoji-strip": "^1.0.0",
    "@types/node": "^20.4.2",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  }
}
